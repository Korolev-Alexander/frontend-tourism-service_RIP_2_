{
  "$schema": "https://schema.tauri.app/config/2.0.0.json",
  "productName": "Smart Devices",
  "version": "0.1.0",
  "identifier": "com.rip.smartdevices",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Smart Devices",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: blob: http://localhost:8080 http://192.168.1.100:8080; connect-src 'self' http://localhost:8080 ws://localhost:8080 http://192.168.1.100:8080 ws://192.168.1.100:8080"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}