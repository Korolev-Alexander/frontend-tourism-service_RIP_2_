{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Smart Devices Manager",
  "version": "0.1.0",
  "identifier": "com.smartdevices.manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://192.168.1.12:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "http": {
      "enabled": true
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Smart Devices Manager",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://192.168.1.12:5173; img-src 'self' http://192.168.1.12:9000 data: blob:; connect-src 'self' http://192.168.1.12:8082; script-src 'self'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
